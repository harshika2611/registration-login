<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link  href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<style>
  #form{
      padding: 10px 10px;
      max-width: 350px;
      margin: 0 auto;
      background-color: aliceblue;
      box-shadow: 5px 5px rgb(162, 195, 224);
    }
    input{
   margin: 10px 10px;
    }
    h2{
      text-align: center;
      margin-bottom: 30px;
    }
    .main-up{
      display: flex;
      gap: 7px;
    }
</style>
<body>
  <h2>Login page</h2>
  <form  method="post" class="row g-3 needs-validation" id="form" novalidate>
    <label for="Email" class="form-label">Email</label>
    <input type="email" name="Email" id="Email" class="form-control" required>
    <label for="password" class="form-label">Password</label>
    <input type="password" name="password" id="password" class="form-control" required>
<div class="main-up">
    <%if(locals.error){%>
      <div style="color: red;"><%=error%></div>
    <%}%>
      <div><a href="http://localhost:8050/api/user">Sign up</a></div>
    </div>
    <div><a href="http://localhost:8050/api/forgot">Forgot password</a></div>
    <button type="submit">Login</button>
  </form>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>

    (function () {
      'use strict'
    
      var forms = document.querySelectorAll('.needs-validation')
    
      Array.prototype.slice.call(forms)
        .forEach(function (form) {
          form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
              event.preventDefault()
              event.stopPropagation()
            }
    
            form.classList.add('was-validated')
          }, false)
        })
    })()
      </script>
</body>
</html>