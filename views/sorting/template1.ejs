    }
    function decr() {
      let pageC = document.getElementById("pageC");
      pageC.innerHTML = minlen;
      document.getElementById("dec").href = `/api/tasks/sorting/?id=${(minlen)}&field=<%=field%>&orderBy=<%=orderBy%>`

    }
    function dec1() {
      let pageC = document.getElementById("pageC");
      if (pageC.innerHTML > 1) {
        pageC.innerHTML = parseInt(pageC.innerHTML) - 1;
        document.getElementById("dec1").href = `/api/tasks/sorting/?id=${parseInt(pageC.innerHTML)}&field=<%=field%>&orderBy=<%=orderBy%>`

      }

    }
    function inc1() {
      let pageC = document.getElementById("pageC");
      if (pageC.innerHTML < 200) {
        pageC.innerHTML = parseInt(pageC.innerHTML) + 1;
        document.getElementById("inc1").href = `/api/tasks/sorting/?id=${parseInt(pageC.innerHTML)}&field=<%=field%>&orderBy=<%=orderBy%>`

      }
    }
